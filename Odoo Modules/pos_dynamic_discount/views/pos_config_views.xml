<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_config_view_form_discount_limits" model="ir.ui.view">
            <field name="name">pos.config.form.discount.limits</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group>
                        <separator string="Discount Configuration"/>
                        <group string="Discount Limits" name="discount_limits">
                            <field name="max_percentage_discount" widget="percentage"/>
                            <field name="max_fixed_amount_discount" widget="monetary"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>